{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "verbatimModuleSyntax": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts", 
        "types/**/*.d.ts",
        "src/config/**/*.ts",
        "src/queue/**/*.ts",
        "src/scripts/**/*.ts",
        "src/__tests__/**/*.ts",
    ],
    "exclude": ["node_modules", "dist"]
}